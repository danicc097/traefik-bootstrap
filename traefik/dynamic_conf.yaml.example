http:
  routers:
    traefik:
      rule: "Host(`traefik.app.localhost`)"
      service: "api@internal"
      tls:
        domains:
          - main: "app.localhost"
            sans:
              - "*.app.localhost"
          - main: "domain.local"
            sans:
              - "*.domain.local"
    my-router-1:
      entryPoints:
        - web
      rule: "Host(`traefik-test.dev.localhost`)"
      service: custom-service-1

  services:
    custom-service-1:
      loadBalancer:
        servers:
        - url: "https://localhost:8499/"
tls:
  certificates:
    # provide container mount path
    # multiple certs can be added for different domains
    - certFile: "/etc/certs/localhost.pem"
      keyFile: "/etc/certs/localhost-key.pem"
